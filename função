def calculadora(valor1, valor2, operadora):
    if operadora == "+":
        return valor1 + valor2
    elif operadora ==  "-" :
        return valor1 - valor2
    elif operadora == "/" :
        return valor1 / valor2
    elif operadora == "*":
        return valor1 * valor2
    else:
        return "opera√ßao invalida"

valor1 = int(input("digite um numero"))
valor2 = int(input("digite um numero"))
operadora = input("digite a operdora")

resultado = calculadora(valor1, valor2, operadora)
print(resultado)
